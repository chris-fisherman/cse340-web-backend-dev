<% if (title) { %>
    <h1 id="loginTitle"><%= title %></h1>

    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
            <%  }) %>
       </ul>
    <% } %>

    <form id="formLogin" action="/account/login" method="post">
        <label for="account_email">Email:</label><br>
        <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>"><br>

        <label for="account_password">Password:</label><br>
        <div id="pwdPosition">
            <input type="password" id="account_password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required><br><br>
            <span id="pwdBtn">
                Show
            </span>
        </div>

        <p id="pwdRequire">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
        
        <div id="loginBtnContainer">
            <input id="loginInput" type="submit" value="LOGIN">
            <p>No account? <a id="signUp" href="/account/register" title="Click to Sign Up">Sign-up</a></p>
        </div>
    </form>
<% } else {
    res.redirect('/')
} %>