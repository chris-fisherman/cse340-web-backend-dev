<% if (title) { %>
    <h1 id="updateTitle"><%= title %></h1>

    <%- messages() %>

    <!-- <%# if (errors) { %>
        <ul class="notice">
            <%# errors.array().forEach(error => { %>
                <li><%#= error.msg %></li>
            <%# })%>
        </ul>
    <%# } %> -->

    <% if (accountData) { %>
        <form id="formRegister" class="updateForm" action="/account/update-data" method="post">

            <!-- First name -->
            <label for="account_firstname">First name:</label><br>
            <input type="text" id="account_firstname" name="account_firstname" required
            <% if(accountData.account_firstname) { %> 
                value="<%= accountData.account_firstname %>"
            <% } %>><br>
            
            <!-- Last name -->
            <label for="account_lastname">Last name:</label><br>
            <input type="text" id="account_lastname" name="account_lastname" required
            <% if(accountData.account_lastname) { %> 
                value="<%= accountData.account_lastname %>"
            <% } %>><br>
                
            <!-- Email -->
            <label for="account_email">Email:</label><br>
            <input type="email" id="account_email" name="account_email" required
            <% if(accountData.account_email) { %> 
                value="<%= accountData.account_email %>"
            <% } %>><br>
            
            <!-- SUBMIT -->
            <div id="loginBtnContainer">
                <input id="loginInput" type="submit" value="Update">
            </div>

            <!-- Hidden -->
            <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> 
                value="<%= locals.account_id %>"
            <% } %>>
        </form>

        <hr>

        <form id="formRegister" class="changePwdForm" action="/account/update-data">

            <h3>Update Password</h3>

            <p>*note your original password will be changed.</p>

            <!-- Password -->
            <label for="account_password">Password:</label><br>
            <div id="pwdPosition">
                <input type="password" id="account_password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" <%# pattern="(?=.*\d)(?=.*[A-Z])(?=.*[\(@\)!%*?&]).{12,}"%> required><br><br>

                <span id="pwdBtn">Show</span>
            </div>

            <p id="pwdRequire">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>

            <!-- SUBMIT -->
            <div id="loginBtnContainer">
                <input id="loginInput" type="submit" value="Change Password">
            </div>

            <!-- Hidden -->
            <input type="hidden" name="account_id"
            <% if(locals.account_id) { %> 
                value="<%= locals.account_id %>"
            <% } %>>
        </form>
        

    <% } else { %>
        <p>You must log in to view this page.</p>
    <% } %>
    
    

<% } else {
    res.redirect('/')
} %>